{
	"id": "/grape/forgot_password",
	"description": "Resets and send a new password to a user",
	"sqlfunc": "grape.forgot_password",
	"sqlfunctype": "jsonb",
	"name": "GrapeForgotPassword",
	"roles": ["guest"],
	"type": "object",
	"properties": {
		"email": {"type": "string", "description": "E-mail for the user to reset"}
	},
	"return": {
		"type": "object",
		"properties": {
			"status": {"enum": ["ERROR", "OK"]},
			"message": {"type": "string"},
			"code": {"type": "number"},
			"error": {"type": "object"}
		}
	}
}
